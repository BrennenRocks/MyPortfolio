<% include ../partials/header %>
<div class="container">
    <div class="thumbnail">
        <img class="img-responsive" src="<%=project.image%>">
        <div class="caption-full">
            <h4><%=project.title%> - <a href="<%= project.address %>" target="_blank">Visit Site</a></h4>
            <p><%- project.description %></p>
            <% if(currentUser && currentUser.isAdmin){ %>
                <a class="btn btn-warning" href="/projects/<%= project._id %>/edit">Edit</a>
                <form class="delete-form" action="/projects/<%= project._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </form>
            <% } %>
        </div>
    </div>
</div>

<% include ../partials/footer %>